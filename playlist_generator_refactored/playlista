#!/usr/bin/env python3
"""
Simple wrapper for the new CLI module.
Provides a shorter command: 'playlista' instead of 'python -m src.presentation.cli.main'
"""

import sys
from pathlib import Path

# Add src to path for imports
# When playlista is in /usr/local/bin/, src is in /app/src
if Path(__file__).parent.name == 'bin':
    # Running from /usr/local/bin/playlista
    sys.path.insert(0, '/app/src')
else:
    # Running from project directory
    sys.path.insert(0, str(Path(__file__).parent / 'src'))

# Import and run the new CLI
from presentation.cli.main import main

if __name__ == "__main__":
    sys.exit(main()) 