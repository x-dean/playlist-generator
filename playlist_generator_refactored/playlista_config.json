{
  "playlista_config": {
    "description": "Playlista Configuration - Simplified for Docker Compose",
    "version": "1.0.0",
    
    "paths": {
      "description": "File system paths",
      "settings": {
        "MUSIC_PATH": {
          "value": "/music",
          "description": "Container music path",
          "type": "path",
          "default": "/music"
        },
        "CACHE_DIR": {
          "value": "/app/cache",
          "description": "Cache directory for analysis results",
          "type": "path",
          "default": "/app/cache"
        },
        "LOG_DIR": {
          "value": "/app/logs",
          "description": "Log directory",
          "type": "path",
          "default": "/app/logs"
        },
        "OUTPUT_DIR": {
          "value": "/app/playlists",
          "description": "Output directory for generated playlists",
          "type": "path",
          "default": "/app/playlists"
        },
        "HOST_LIBRARY_PATH": {
          "value": "/root/music/library",
          "description": "Host library path for music files",
          "type": "path",
          "default": "/root/music/library"
        }
      }
    },

    "memory_management": {
      "description": "Memory management settings",
      "settings": {
        "MEMORY_LIMIT_GB": {
          "value": 6.0,
          "description": "Memory limit per worker in GB",
          "type": "float",
          "min": 0.5,
          "max": 32.0,
          "default": 6.0
        },
        "MEMORY_AWARE": {
          "value": true,
          "description": "Enable memory-aware processing",
          "type": "boolean",
          "default": true
        }
      }
    },

    "logging": {
      "description": "Logging configuration",
      "settings": {
        "LOG_LEVEL": {
          "value": "INFO",
          "description": "Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)",
          "type": "string",
          "options": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
          "default": "INFO"
        }
      }
    },

    "file_processing": {
      "description": "File processing settings",
      "settings": {
        "LARGE_FILE_THRESHOLD_MB": {
          "value": 50,
          "description": "File size threshold for large file processing (MB)",
          "type": "integer",
          "min": 10,
          "max": 1000,
          "default": 50
        }
      }
    },

    "playlist_generation": {
      "description": "Playlist generation settings",
      "settings": {
        "MIN_TRACKS_PER_GENRE": {
          "value": 10,
          "description": "Minimum tracks per genre for tag-based playlists",
          "type": "integer",
          "min": 1,
          "max": 100,
          "default": 10
        }
      }
    },

    "external_apis": {
      "description": "External API configuration",
      "settings": {
        "LASTFM_API_KEY": {
          "value": "9fd1f789ebdf1297e6aa1590a13d85e0",
          "description": "Last.fm API key for metadata enrichment",
          "type": "string",
          "default": "9fd1f789ebdf1297e6aa1590a13d85e0"
        }
      }
    },

    "processing_modes": {
      "description": "Processing mode settings",
      "settings": {
        "DEBUG": {
          "value": false,
          "description": "Enable debug mode for detailed logging",
          "type": "boolean",
          "default": false
        },
        "FAST_MODE_ENABLED": {
          "value": false,
          "description": "Enable fast mode processing (3-5x faster with reduced features)",
          "type": "boolean",
          "default": false
        }
      }
    }
  }
} 